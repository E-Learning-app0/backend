# Content Service Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/elearning_content

# Vimeo API Configuration (Optional - for video management)
# Get these from https://developer.vimeo.com/
VIMEO_CLIENT_ID=your_vimeo_client_id_here
VIMEO_CLIENT_SECRET=your_vimeo_client_secret_here
VIMEO_ACCESS_TOKEN=your_vimeo_access_token_here

# Quiz Service Configuration
QUIZ_MICROSERVICE_URL=http://localhost:8002/upload-quiz
QUIZ_GENERATION_INTERVAL_HOURS=24
HTTP_TIMEOUT_SECONDS=30
PDF_BASE_URL=http://localhost:8080/static/pdfs/

# Service URLs
AUTH_SERVICE_URL=http://localhost:8000
CONTENT_SERVICE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173

# Instructions to get Vimeo credentials:
# 1. Go to https://developer.vimeo.com/
# 2. Create a new app
# 3. Generate access token with these scopes:
#    - public, private, upload, edit, video_files
# 4. Replace the values above with your actual credentials
